@model IEnumerable<almny.Areas.Admin.Models.DTO.VideoLikeViewModel>
@{
    ViewBag.Title = "الاعجابات";
}

<div class="table">
    <div class="table_header">
        <h1 class="title">اجمالي الاعجابات</h1>
    </div>
    <div class="table-section">
        <table>
            <thead>
                <tr>
                    <th>#م</th>
                    <th>عنوان الفيديو</th>
                    <th>الصورة</th>
                    <th> اجمالي الاعجابات</th>
                    <th> اعداد</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            <img src="~/Uploads/images/@item.Thumbnail">
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LikesCount)
                        </td>
                        <td>
                            <a asp-area="" asp-controller="Videos" asp-action="Details" asp-route-id="@item.Id" class="btn-edit"><i class="fas fa-eye"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>

