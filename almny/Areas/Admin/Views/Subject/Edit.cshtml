@model SubjectViewModel
@{
    ViewBag.Title = "تعديل - المواد الدراسية";
}

<section class="video-form">
    <h1 class="heading">تعديل مادة دراسية</h1>
    <form asp-action="Edit" method="post" role="form">
        @Html.AntiForgeryToken()
        <input asp-for="Id" hidden />
        <p>اسم المادة <span>*</span></p>
        <input asp-for="Name" class="box form-control" placeholder="ادخل اسم المادة" maxlength="20" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <input type="submit" value="حفظ" name="submit" class="btn">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</section>
